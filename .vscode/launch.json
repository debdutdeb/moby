    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start daemon",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "program": "${workspaceFolder}/dockerd",
            "preLaunchTask": "Build daemon",
            "args": [
                "-p",
                "${workspaceFolder}/docker.pid",
                "--host",
                "unix://${workspaceFolder}/docker.sock"
            ],
            "asRoot": true,
            "console": "integratedTerminal"
        },
        {
            "name": "Attach to delve",
            "type": "go",
            "request": "attach",
            "port": 37165,
            "debugAdapter": "dlv-dap",
        }
    ]
}